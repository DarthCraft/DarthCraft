<?xml version="1.0" encoding="UTF-8"?>
<project name="darthcraft" default="all">
  
  
  <property file="darthcraft.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.tox/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module DarthCraft -->
  
  <dirname property="module.darthcraft.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.darthcraft" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.darthcraft" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.darthcraft" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.darthcraft" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="darthcraft.output.dir" value="${module.darthcraft.basedir}/out/production/DarthCraft"/>
  <property name="darthcraft.testoutput.dir" value="${module.darthcraft.basedir}/out/test/DarthCraft"/>
  
  <path id="darthcraft.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="darthcraft.module.production.classpath">
    <path refid="${module.jdk.classpath.darthcraft}"/>
  </path>
  
  <path id="darthcraft.runtime.production.module.classpath">
    <pathelement location="${darthcraft.output.dir}"/>
  </path>
  
  <path id="darthcraft.module.classpath">
    <path refid="${module.jdk.classpath.darthcraft}"/>
    <pathelement location="${darthcraft.output.dir}"/>
  </path>
  
  <path id="darthcraft.runtime.module.classpath">
    <pathelement location="${darthcraft.testoutput.dir}"/>
    <pathelement location="${darthcraft.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.darthcraft">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.darthcraft">
    <patternset refid="excluded.from.module.darthcraft"/>
  </patternset>
  
  <path id="darthcraft.module.sourcepath">
    <dirset dir="${module.darthcraft.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.darthcraft" depends="compile.module.darthcraft.production,compile.module.darthcraft.tests" description="Compile module DarthCraft"/>
  
  <target name="compile.module.darthcraft.production" depends="register.custom.compilers" description="Compile module DarthCraft; production classes">
    <mkdir dir="${darthcraft.output.dir}"/>
    <javac2 destdir="${darthcraft.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.darthcraft}/javac">
      <compilerarg line="${compiler.args.darthcraft}"/>
      <bootclasspath refid="darthcraft.module.bootclasspath"/>
      <classpath refid="darthcraft.module.production.classpath"/>
      <src refid="darthcraft.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.darthcraft"/>
    </javac2>
    
    <copy todir="${darthcraft.output.dir}">
      <fileset dir="${module.darthcraft.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.darthcraft.tests" depends="register.custom.compilers,compile.module.darthcraft.production" description="compile module DarthCraft; test classes" unless="skip.tests"/>
  
  <target name="clean.module.darthcraft" description="cleanup module">
    <delete dir="${darthcraft.output.dir}"/>
    <delete dir="${darthcraft.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.darthcraft" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.darthcraft" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>